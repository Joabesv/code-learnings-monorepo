{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "dev": {
      "persistent": true,
      "dependsOn": ["^build"],
      "cache": false
    },
    "build": {
      "cache": true,
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "*.exe", "*.bin"]
    },
    "fmt": {
      "cache": true,
      "outputs": []
    },
    "test": {
      "cache": true,
      "dependsOn": ["^build"],
      "outputs": []
    },
    "clean": {
      "cache": false
    }
  }
}